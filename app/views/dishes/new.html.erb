<h1>Novo prato</h1>

<% if @dish.errors.any? %>
  <ul>
    <% @dish.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @dish do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :calories %>
    <%= f.number_field :calories %>
  </div>
  <%= f.submit 'Salvar' %>
<% end %>

<%= link_to 'Voltar', root_path %>