<%= render 'shared/form_errors', object: @dish %>

<%= form_with model: @dish do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :calories %>
    <%= f.number_field :calories %>
  </div>
  <div>
    <%= f.label :illustration %>
    <%= f.file_field :illustration, accept: 'image/*' %>
  </div>
  <%= f.submit 'Salvar' %>
<% end %>